<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Ariana-Cloud - Cloud provider">
    <meta name="author" content="node.js.developers.kh">
    <meta name="keywords" content="Ariana-Cloud, CMS project">

    <!-- Title Page-->
    <title><%= pageTitle %></title>
    <%- include('../partials/stylesheet.ejs') %>
</head>

<body class="animsition text-right">
    <div class="page-wrapper text-right">
        <%- include('../partials/header-mobile.ejs') %>
        <%- include('../partials/menu-sidebar.ejs') %>

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <%- include('../partials/header-desktop.ejs') %>

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <%- include ('../partials/menu-sidebar.ejs') %>
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row mb-5">
                            <div class="col-md-12">
                                <%- include('../partials/errors.ejs') %>
                            </div>
                            <div class="col-md-12">
                                <div class="overview-wrap">
                                    <h2 class="title-1">پرداختای کاربرا</h2>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive table--no-card m-b-40">
                                    <div class="table-responsive">
                                        <table class="table table-borderless table-data3">
                                            <thead>
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">تاریخ پرداخت</th>
                                                    <th scope="col">وضعیت پرداخت</th>
                                                    <th scope="col">RefID پرداخت</th>
                                                    <th scope="col">مبلغ به تومن</th>
                                                    <th scope="col">کی پرداخت کرده؟</th>
                                                </thead>
                                            </tr>
                                            <tbody>
                                                <% if (payments.length > 0) { %>
                                                    <% for (let i = 0; i < payments.length; i++) { %>
                                                        <tr>
                                                            <td scope="row">
                                                                <%= i + 1 %>
                                                            </td>
                                                            <td>
                                                                <%= payments[i].createdAt.toLocaleDateString() %>
                                                            </td>
                                                            <% if (payments[i].status === 'paid') { %>
                                                                <td class="process">پرداخت انجام شد.</td>
                                                            <% } else if (payments[i].status === 'not-paid') { %>
                                                                <td class="denied">پرداخت انجام نشد.</td>
                                                            <% } else { %>
                                                                <td class="denied">در حال پرداخت</td>
                                                            <% } %>
                                                            <td>
                                                                <%= payments[i].refId %>
                                                            </td>
                                                            <td>
                                                                <%= payments[i].amount %>
                                                            </td>
                                                            <td class="text-right">
                                                                <% for (let j = 0; j < users.length; j++) { %>
                                                                    <% if (users[j].id === payments[i].userId) { %>
                                                                        <%= users[j].fullname %>
                                                                    <% } %>
                                                                <% } %>
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                <% } else { %>
                                                    <tr>
                                                        <td scope="row">1</td>
                                                        <td>-</td>
                                                        <td class="denied">تا امروز کسی حسابشو شارژ نکرده</td>
                                                        <td>-</td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%- include('../partials/copyright.ejs') %>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
    </div>
    <%- include('../partials/javascript.ejs') %>
</body>

</html>
<!-- end document-->